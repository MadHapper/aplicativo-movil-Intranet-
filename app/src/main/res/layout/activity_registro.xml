<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".registro">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#004AAC"
            app:layout_constraintTop_toBottomOf="@+id/imageView4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="10dp">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro de Usuario"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    />


            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completar los siguientes campos para realizar su registro de cuenta"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtNombreNew"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:textColorHint="#555555"
                    android:hint="Nombres"
                    android:inputType="textPersonName"
                    android:paddingLeft="30dp"
                    android:textColor="#000000" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edtApellidoPaternoNew"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:textColorHint="#555555"
                    android:hint="Apellido Paterno"
                    android:inputType="textPersonName"
                    android:paddingLeft="30dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edtApellidoMaternoNew"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:textColorHint="#555555"
                    android:hint="Apellido Materno"
                    android:inputType="textPersonName"
                    android:paddingLeft="30dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edtCodigo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:textColorHint="#555555"
                    android:hint="Codigo de estudiante (opcional)"
                    android:inputType="number"
                    android:paddingLeft="30dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">

                <RadioGroup
                    android:id="@+id/radioGroupCursos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/AlumnoPre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alumno Pre-Grado"
                        android:textStyle="bold"
                        android:textSize="17sp" />

                    <RadioButton
                        android:id="@+id/AlumnoPost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alumno Post-Grado"
                        android:textStyle="bold"
                        android:textSize="17sp" />

                    <RadioButton
                        android:id="@+id/AlumnoGeneral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alumno General"
                        android:textStyle="bold"
                        android:textSize="17sp" />

                </RadioGroup>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edtCorreoNew"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:textColorHint="#555555"
                    android:hint="Correo Electronico"
                    android:inputType="textPersonName"
                    android:paddingLeft="30dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edtContraseñaNew"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"

                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:textColorHint="#555555"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:paddingLeft="30dp"
                    android:textColor="#000000"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnregistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="#004AAC"
                android:text="Registrar" />

            <Button
            android:id="@+id/button"
                android:backgroundTint="#004AAC"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="abrirmainactivity"
            android:text="Volver" />

        </LinearLayout>

        <TextView
            android:id="@+id/idgrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            tools:layout_editor_absoluteX="291dp"
            tools:layout_editor_absoluteY="702dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>